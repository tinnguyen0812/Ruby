<div class="container py-2">
  <%= link_to 'Back', products_path, :class => 'btn btn-danger mb-2' %>
  <p id="notice" class='text-success'><%= notice %></p>
  <div class="card">
    <h5 class="card-header"><%= @product.name %>
    </h5>
    <div class="card-body">
      <div class='row align-items-start'>
          <div class='col'>
          <p class="lead">
            <strong>Name</strong>
            <%= @product.name %>
          </p>

           <p class="lead">
            <strong>description</strong>
            <%= @product.des %>
          </p>

          <p class="lead"> 
            <strong>Price:</strong>
            <%= @product.price %>
          </p>

          <p class="lead">
            <strong>Color</strong>
            <%= @product.color %>
          </p>
          <p class="lead">
            <strong>Image:</strong>
              <div class='image-product'>
                <%= image_tag(@product.image, style: 'width:100%')%>
              </div>
          </p> 
          </div>
          <div class='col'>
            <div class='card w-50 float-end'>
            <h4 class="card-header">Add properties</h4>
              <div class='card-body'>
                <%= render 'properties/form' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
